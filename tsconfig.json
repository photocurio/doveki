{
	"include": [
		"src/**/*",
		"functions/**/*"
	],
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "commonjs",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"presets": "solid",
		"removeComments": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "es2016"
	}
}
